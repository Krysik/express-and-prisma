// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Book {
  id Int @id @default(autoincrement())
  title String
  isbn String
  availableAmount Int
  author Author @relation(fields: [authorId], references: [id]) // this field does not exist int the database
  authorId Int
}

model Author {
  id Int @id @default(autoincrement())
  name String
  surname String
}


